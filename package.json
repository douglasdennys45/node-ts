{
  "name": "node-ts",
  "version": "1.5.0",
  "description": "Boilerplate to streamline the development process with some out-of-the-box use cases",
  "main": "build/index.js",
  "author": "Douglas Dennys <douglasdennys45@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/main.ts",
    "start": "node build/main.js",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "check": "npm-check -s -u",
    "lint:fix": "eslint 'src/**' --fix",
    "test": "jest --passWithNoTests --no-cache --runInBand --forceExit",
    "test:watch": "npm t -- --watchAll",
    "test:staged": "npm t -- --findRelatedTests",
    "test:coverage": "npm t -- --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "module-alias": "^2.2.2",
    "mongodb": "^4.8.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@jest-mock/express": "^2.0.1",
    "@shelf/jest-mongodb": "^4.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/module-alias": "^2.0.1",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.6.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.21.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-mock-extended": "^2.0.6",
    "lint-staged": "^12.3.7",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
